<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:gravity="center"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/main_activity_btn_start"
        android:text="Start"
        android:textAllCaps="false"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/main_activity_btn_pause"
        android:layout_below="@id/main_activity_btn_start"
        android:layout_marginTop="15dp"
        android:text="Pause"
        android:textAllCaps="false"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/main_activity_btn_stop"
        android:layout_below="@id/main_activity_btn_pause"
        android:layout_marginTop="15dp"
        android:text="Stop"
        android:textAllCaps="false"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


</RelativeLayout>